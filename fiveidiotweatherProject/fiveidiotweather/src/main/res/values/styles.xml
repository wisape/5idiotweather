<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light">

    </style>

    <style name="AddCityTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/fiveidiot_actionbar</item>
    </style>

    <style name="fiveidiot_actionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/titlecolor</item>
        <item name="android:titleTextStyle">@style/fiveidiot_textstyle</item>
    </style>
    
    <style name="fiveidiot_textstyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/titlecolor</item>
    </style>

    <style name="DefaultTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/fiveidiot_actionbar</item>
        <item name="android:textColor">#eee</item>
        <item name="mainColor">#555</item>
        <item name="todayColor">#6000</item>
        <item name="after1Color">#5000</item>
        <item name="after2Color">#3000</item>
        <item name="after3Color">#4000</item>
        <item name="after4Color">#2000</item>
        <item name="after1weekColor">#8000</item>
        <item name="after2weekColor">#7000</item>
        <item name="after3weekColor">#9000</item>
        <item name="after4weekColor">#7000</item>
        <item name="subtextColor">#555</item>
    </style>

</resources>
