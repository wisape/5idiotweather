<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light">

    </style>

    <style name="AddCityTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/fiveidiot_actionbar</item>
    </style>

    <style name="fiveidiot_actionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/titlecolor</item>
        <item name="android:titleTextStyle">@style/fiveidiot_textstyle</item>
    </style>
    
    <style name="fiveidiot_textstyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textcolor</item>
    </style>

    <style name="DefaultTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/fiveidiot_actionbar</item>
        <item name="android:textColor">#eee</item>
        <item name="mainColor">#333333</item>
        <item name="todayColor">#09ffffff</item>
        <item name="after1Color">#22ffffff</item>
        <item name="after2Color">#33ffffff</item>
        <item name="after3Color">#22ffffff</item>
        <item name="after4Color">#33ffffff</item>
        <item name="after1weekColor">#22000000</item>
        <item name="after2weekColor">#33000000</item>
        <item name="after3weekColor">#22000000</item>
        <item name="after4weekColor">#33000000</item>
        <item name="subtextColor">#55ffffff</item>
    </style>

</resources>
