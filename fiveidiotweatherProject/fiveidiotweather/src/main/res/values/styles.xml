<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">#eee</item>
    </style>

    <style name="AddCityTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="DefaultTheme" parent="AppBaseTheme">
        <item name="android:textColor">#eee</item>
        <item name="mainColor">#555</item>
        <item name="todayColor">#6000</item>
        <item name="after1Color">#5000</item>
        <item name="after2Color">#3000</item>
        <item name="after3Color">#4000</item>
        <item name="after4Color">#2000</item>
        <item name="after1weekColor">#8000</item>
        <item name="after2weekColor">#7000</item>
        <item name="after3weekColor">#9000</item>
        <item name="after4weekColor">#7000</item>
        <item name="subtextColor">#555</item>
    </style>

</resources>
